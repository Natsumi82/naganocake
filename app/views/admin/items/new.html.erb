<div class="row">
  <h2>商品新規登録</h2>
  <%= form_with(model: @item, url: admins_items_path,nethod: :post, local: true) do |f| %>

<% if @item.errors.any? %>
<h3><%= @item.errors.full.count %> error </h3>

<ul>
  <%= @item.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>

<div class="col-xs-5">
  <div class="field">
    <%= f.label :image %>
    <%= f.attachment_field :image %>
  <div>

  <div class="field">
    <%= f.label :商品名 %>
    <%= f.text_area :explanation %>
  </div>

  <div class="field">
    <%= f.label :ジャンル %>
    <%= f.collection_select(:genre_id, Genre.where(is_enabled: true), :id, :name, prompt: "選択してください") %>
  </div>

  <div class="field">
    <%= f.label :税抜価格 %>
    <%= f.text_area :price %> 円
  </div>

  <div class="field">
    <%= f.radio_button :is_enabled, true %>
    <%= f.label :is_enabled, "販売中" %>
    <%= f.radio_button :is_enabled, false %>
    <%= f.label :is_enabled, "売り切れ" %>
  </div>

  <div class="actions row">
   <%= f.hidden_field :id, :value => @item.id %>
   <%= f.submit "新規登録", class:"btn btn-primary col-xs-12" %>
  </div>

</div>
<% end %>
</div>

