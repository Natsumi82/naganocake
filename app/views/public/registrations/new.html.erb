<div class='container'>
<div class='row'>
<div class="col-lg-8">


<h2>新規会員登録</h2><br/>
<%= form_with model: @customer ,url:registration_path(resource_name) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table class="table table-striped">
<div class="field">
 <%= f.label :名前 %>
 <%= f.label :（姓） %>
 <%= f.text_field :first_name %>
 <%= f.label :（名） %>
 <%= f.text_field :last_name %>
</div>

<div class="field">
 <%= f.label :フリガナ %><br />
 <%= f.label :（セイ） %>
 <%= f.text_field :first_name_kana %>
 <%= f.label :（メイ） %>
 <%= f.text_field :last_name_kana %>
</div>

<div class="field">
 <%= @customer.email %>
 <%= f.label :メールアドレス %><br />
 <%= f.email_field :email %>
</div>

<div class="field">
 <%= f.label :郵便番号（ハイフンなし） %><br />
 <%= f.text_field :postal_code %>
</div>

<div class="field">
 <%= f.label :住所 %><br />
 <%= f.text_field :address %>
</div>

<div class="field">
 <%= f.label :電話番号（ハイフンなし） %><br />
 <%= f.text_field :telephone_number %>
</div>

<div class="field">
 <%= f.label :パスワード（6文字以上） %>
 <% if @minimum_password_length %>
 <% end %><br />
 <%= f.password_field :password %>
</div>

<div class="field">
 <%= f.label :パスワード（確認用） %><br />
 <%= f.password_field :password_confirmation %>
</div>

<div class="actions">
 <%= f.submit "新規登録",class: "btn btn-success" %>
</div>
</table>

 <% end %>

 <h2>既に登録済みの方</h2>

  <%= link_to "こちら", new_customer_session_path %>
  <span> からログインしてください。</span>
  <p id="notice"><%= notice %></p>

<%= render "public/shared/links" %>

</div>
</div>
</div>